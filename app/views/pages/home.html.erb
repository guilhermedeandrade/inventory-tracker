<style>
    .jumbotron {
        width: 700px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }
</style>

<div class="jumbotron">    
    <h1>Inventory Tracker</h1>
    <% if current_user %>
        <button class="btn" style="margin-bottom: 10px"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></button>
        <br>
        <%= link_to 'Account', users_path %> |
        <%= link_to 'Categories', categories_path %> |
