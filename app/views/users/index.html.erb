<h1>My account</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.id == current_user.id %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_registration_path %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h2>Testando o index com ng-repeat e ng-if</h2>

<div ng-controller="usersList">
  <ul>
    <li ng-repeat="user in users">{{user.email}}</li>
  </ul>

  <table>
    <th>Email</th>
    <tr ng-repeat="user in users">
        <td>{{user.email}}</td>
    </tr>
  </table>
</div>

